{
  "name": "fender-vconf",
  "version": "0.1.0",
  "description": "A Vanilla Javascript Development Environment",
  "author": "fender0ne <fender00ne@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fender0ne/fender-vconf.git"
  },
  "homepage": "https://fender0ne.github.io/fender-vconf/",
  "keywords": [
    "vanilla",
    "configuration",
    "template",
    "Javascript",
    "local",
    "https",
    "development",
    "environment",
    "Jest",
    "ESLint",
    "Prettier",
    "Husky",
    "lint-staged",
    "concurrently",
    "live-server",
    "http-server",
    "sass",
    "VSCode"
  ],
  "main": "index.html",
  "scripts": {
    "dev": "concurrently --prefix \"{pid}-{name}\" --kill-others \"npm:dev:*\"",
    "dev:scss": "npm run scss:watch",
    "dev:server": "live-server --host=localhost --port=44300 --https=\"C:\\Users\\idmoi_000\\AppData\\Local\\liveServer\\live-serve-config.js\"",
    "scss:watch": "sass --watch --no-source-map css/",
    "build-js": "browserify app.js | uglifyjs -mc > static/bundle.js",
    "test:esm-babel": "jest --passWithNoTests --colors",
    "test:esm-babel:watch": "jest --watch --passWithNoTests --colors",
    "test:esm": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:esm:cover": "npm run test:esm -- --coverage",
    "test:error": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --fix --ext .js",
    "lint-staged": "lint-staged",
    "format": "prettier . --write",
    "clint": "commit",
    "prepare": "husky install"
  },
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@commitlint/prompt-cli": "^17.6.6",
    "concurrently": "^8.2.0",
    "eslint": "8.40.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-n": "15.7.0",
    "eslint-plugin-promise": "6.1.1",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "13.2.2",
    "prettier": "2.8.8"
  }
}
